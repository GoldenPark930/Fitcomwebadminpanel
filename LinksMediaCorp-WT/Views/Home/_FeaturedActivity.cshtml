@{
    LinksMediaCorpEntity.FeaturedActivityQueue activity = new LinksMediaCorpEntity.FeaturedActivityQueue();

    var gridFeaturredActivity = new WebGrid(Model, canPage: true, rowsPerPage: 10, selectionFieldName: "selectedRow", ajaxUpdateContainerId: "gridFeaturredActivity");
    gridFeaturredActivity.Pager(WebGridPagerModes.NextPrevious);
}

<div class="reporting-table second">
    @if (Model.Count > 0)
    {
        <div id="collapse1" class="panel-collapse collapse in">
            <div id="gridFeaturredActivity" class="report-table-content panel-body">
                @gridFeaturredActivity.GetHtml(tableStyle: "full-table",
                    headerStyle: "",
                    alternatingRowStyle: "alt",
                    selectedRowStyle: "select",
                    columns: gridFeaturredActivity.Columns(
                    new WebGridColumn
                    {
                        Format =
                        @<text>
                            <div class="fleft btn-txt-user">
                                @Html.ActionLink("Delete", "DeleteFeaturedActivity", "Home", new { id = item.QueueId }, new { @class = "delete-btn", onclick = "return confirm('Are you sure you want to delete this item?');" })
                            </div>
                        </text>
                    },
                    gridFeaturredActivity.Column("NameOfActivity", header: "Activity"),
                    gridFeaturredActivity.Column("TrainerName", header: "Trainer"),
                    gridFeaturredActivity.Column("DateofEvent", header: "Event Date", format: (item) => string.Format("{0:dd-MMM-yyyy}", item.DateofEvent)),
                    gridFeaturredActivity.Column("Location", header: "Location"),
                    gridFeaturredActivity.Column("PromotionText", header: "Promo Text")  
                    ))
            </div>
        </div>
    }
    else
    {
        <div class="NoRecord"></div>
    }
</div>
