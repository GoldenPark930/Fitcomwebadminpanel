@{
    LinksMediaCorpEntity.SponsorChallengeQueue sponsorChallenge = new LinksMediaCorpEntity.SponsorChallengeQueue();

    var gridSponsorChallenge = new WebGrid(Model, canPage: true, rowsPerPage: 10, selectionFieldName: "selectedRow", ajaxUpdateContainerId: "gridSponsorChallenge");
    gridSponsorChallenge.Pager(WebGridPagerModes.NextPrevious);
}

<div class="reporting-table second">
    @if (Model.Count > 0)
    {
        <div id="collapse1" class="panel-collapse collapse in">
            <div id="gridSponsorChallenge" class="report-table-content panel-body">
                @gridSponsorChallenge.GetHtml(tableStyle: "full-table",
                    headerStyle: "",
                    alternatingRowStyle: "alt",
                    selectedRowStyle: "select",
                    columns: gridSponsorChallenge.Columns(
                    new WebGridColumn
                    {
                        Format =
                        @<text>
                            <div class="fleft btn-txt-user">
                                @Html.ActionLink("Delete", "DeleteSponsorChallenge", "Home", new { id = item.QueueId }, new { @class = "delete-btn", onclick = "return confirm('Are you sure you want to delete this item?');" })
                            </div>
                        </text>
                    },
                    gridSponsorChallenge.Column("TrainerName", header: "Trainer"),
                    gridSponsorChallenge.Column("ChallengeName", header: "Challenge"),
                    gridSponsorChallenge.Column("SponsorName", header: "Sponsor"),
                    gridSponsorChallenge.Column("StrengthCount", header: "Acceptors"),
                    gridSponsorChallenge.Column("AcceptedDate", header: "Accept By Date", format: (item) => string.Format("{0:dd-MMM-yyyy}", item.AcceptedDate))
                                                  ))
            </div>
        </div>
    }
    else
    {
        <div class="NoRecord"></div>
    }
</div>
