@{
    LinksMediaCorpEntity.CODQueue COD = new LinksMediaCorpEntity.CODQueue();

    var gridChallengeOfTheDay = new WebGrid(Model, canPage: true, rowsPerPage: 10, selectionFieldName: "selectedRow", ajaxUpdateContainerId: "gridCOD");
    gridChallengeOfTheDay.Pager(WebGridPagerModes.NextPrevious);
}
<div class="reporting-table second">
    @if (Model.Count > 0)
    {
        <div id="collapse1" class="panel-collapse collapse in">
            <div id="gridCOD" class="report-table-content panel-body">
                @gridChallengeOfTheDay.GetHtml(tableStyle: "full-table",
                    headerStyle: "",
                    alternatingRowStyle: "alt",
                    selectedRowStyle: "select",
                    columns: gridChallengeOfTheDay.Columns(
                    new WebGridColumn
                    {
                        Format =
                        @<text>
                            <div class="fleft btn-txt-user">
                                @Html.ActionLink("Delete", "DeleteCOD", "Home", new { id = item.QueueId }, new { @class = "delete-btn", onclick = "return confirm('Are you sure you want to delete this item?');" })
                            </div>
                        </text>
                    },
                                             gridChallengeOfTheDay.Column("Featuring", header: "User"),
                                             gridChallengeOfTheDay.Column("ChallengeName", header: "Challenge Name"),
                                             gridChallengeOfTheDay.Column("StrengthCount", header: "Acceptors")

                                                                                                                                  ))

            </div>
        </div>
    }
    else
    {
        <div class="NoRecord"></div>
    }
</div>
